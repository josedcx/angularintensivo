{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./out-tsc/spec",
        "types": [
            "jasmine"
        ],
        "baseUrl": "./",
        "paths": {
          "@app/*": ["src/app/*"],
          "@models/*": ["src/app/_models/*"],
          "@environments/*": ["src/environments/*"],
          "@services/*": ["src/app/_services/*"]
        }
    },
    "files": [
        "src/test.ts",
        "src/polyfills.ts"
    ],
    "include": [
        "src/**/*.spec.ts",
        "src/**/*.d.ts"
    ]
}
